<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @wiki.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= markdown(@wiki.body) %>
</p>

<p>
  <strong>Private:</strong>
    <% if @wiki.private? %>
      <span class="glyphicon glyphicon-ok"></span>
    <% else %>
      <span class="glyphicon glyphicon-remove"></span>
    <% end %>
</p>

<p>
  <strong>User:</strong>
  <%= @wiki.user.username %>
</p>

<% if user_signed_in? %>
  <%= link_to 'Edit', edit_wiki_path(@wiki) %> |
<% end %> 

<%= link_to 'Back', wikis_path %>
